<ol class="breadcrumb mt-2">
    <li class="breadcrumb-item"><a href="/">Página inicial</a></li>
    <li class="breadcrumb-item"><a href="/sala">salas</a></li>
    <li class="breadcrumb-item active">Alterar sala</li>
</ol>

<div class="row">
    <div class="col-8">
        <h1> Alterar sala</h1>
    </div>
    <div class="col-4">
        <a href="/sala" class="btn btn-primary float-right">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-8">
        <form action="/sala/update" method="POST">

            <div class="form-group">
                <label for="sigla">sigla</label>
                <input type="text" class="form-control" id="sigla" value="{{sala.sigla}}" name="sigla">
                <small id="help" class="form-text text-muted">Sigla do sala</small>
            </div>

            <div class="form-group">
                <label for="nome">nome</label>
                <input class="form-control {{hasError errors "nome"}}" name="nome" id="nome" value="{{sala.nome}}">
                <div class="invalid-feedback">{{showError errors "nome"}}"</div>
            </div>

            <div class="form-group">
                <label for="descricao">Descrição</label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3">{{sala.descricao}}</textarea>
            </div>


            <fieldset class="form-group">
                <legend>Área do sala</legend>

                {{#each areas}}

                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="id_area" value={{id}}
                            {{checked ../sala.id_area id}}>
                        {{nome}}
                    </label>
                </div>

                {{/each}}



            </fieldset>

            <input type="hidden" name="id" value="{{sala.id}}">

            <button type="submit" class="btn btn-primary">Salvar</button>


        </form>
    </div>
</div>