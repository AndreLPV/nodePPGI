{{#section 'head'}}

<link rel="stylesheet" href="/js/datatables.net-bs4/css/dataTables.bootstrap4.css">

{{/section}}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">

            <div class="col-sm-6">
                <h1>Salas</h1>
                <a href="/sala/create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus"></i> Nova Sala
                </a>
            </div>

            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Página Inicial</a></li>
                    <li class="breadcrumb-item active">Salas</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-2">

                    <table id="tabelaSala" class="table table-striped">
                        <thead>
                            <tr>
                                <th class="no-sort">#</th>
                                <th> Nome</th>
                                <th> Número da sala </th>
                                <th> Localização da Sala</th>
                                <th class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each salas}}
                            <tr>
                                <td> {{inc @index}} </td>
                                <td> {{nome}} </td>
                                <td> {{numero}} </td>
                                <td> {{localizacao}}</td>
                                <td class=" text-right">
                                    <a href="/sala/read/{{id}}"><i class="fas fa-eye"></i></a>
                                    <a href="/sala/update/{{id}}"><i class="fas fa-pen"></i></a>
                                    
                                    <a href="#" data-toggle="modal" data-target="#modal-delete" data-atividade="{{nome}}" data-sala-id="{{id}}"><i
                                            class="fas fa-trash-alt"></i></a>
                                    <!--
                                    <a href="/sala/remove/{{id}}"><i
                                            class="fas fa-trash-alt"></i></a>-->
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>


</section>

<div class="modal fade" id="modal-danger">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Danger Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-light">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="modal-delete">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Confirmar delete</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>



            <form class="mt-2" role="form" action="/sala/remove" method="POST">

                <div class="modal-body">
                    <p>Deseja excluir a sala <span id="idModalAtividade"></span>?</p>
                    <input type="hidden" name="id" id="idReserva">
                </div>

                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-light" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-outline-light">Sim</button>
                </div>


            </form>
        </div>

    </div>
</div>


{{#section 'scripts'}}

<script src="/js/datatables.net/js/jquery.dataTables.js"></script>
<script src="/js/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
<script>
    $(function () {
        $("#tabelaSala").DataTable({
            order: [],
            columnDefs: [{
                "targets": 'no-sort',
                "orderable": false,
            }],
            paging: true,
            lengthChange: false,
            searching: false,
            ordering: true,
            info: true,
            autoWidth: false,
            sDom: '<"top"i>rt<"bottom"flp><"clear">'
        });


        $('#modal-delete').on('show.bs.modal', function (event) {
            var btn = $(event.relatedTarget)
            var salaId = btn.data('sala-id')
            console.log(salaId)
            var atividade = btn.data('atividade')
            var modal = $(this)
           
            modal.find('.modal-body #idReserva').val(salaId);
            modal.find('.modal-body #idModalAtividade').text(atividade);
        })


    });
</script>
{{/section}}