{{#section 'head'}}

<link rel="stylesheet" href="js/datatables.net-bs4/css/dataTables.bootstrap4.css">

{{/section}}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">

            <div class="col-sm-6">
                <h1>Salas</h1>
                <a href="/sala/create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus"></i> Nova Sala
                </a>
            </div>

            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Página Inicial</a></li>
                    <li class="breadcrumb-item active">Salas</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-2">

                    <table id="tabelaSala" class="table table-striped">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Nome</th>
                                <th> Número da sala </th>
                                <th> Localização da Sala</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each salas}}
                            <tr>
                                <td> {{inc @index}} </td>
                                <td> {{nome}} </td>
                                <td> {{numero}} </td>
                                <td> {{localizacao}}</td>
                                <td class=" text-right">
                                    <a href="/sala/read/{{id}}"><i class="fas fa-eye"></i></a>
                                    <a href="/sala/update/{{id}}"><i class="fas fa-pen"></i></a>
                                    <a href="/sala/remove/{{id}}"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>


</section>
{{#section 'scripts'}}

<script src="js/datatables.net/js/jquery.dataTables.js"></script>
<script src="js/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
<script>
    $(function () {
        $("#tabelaSala").DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "sDom": '<"top"i>rt<"bottom"flp><"clear">'
        });
    });
</script>
{{/section}}